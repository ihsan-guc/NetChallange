@model NetChallange.Web.Models.AddressViewModel.AddressHomeViewModel

@if (Model.PagedList.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th></th>
                <th>Ülke</th>
                <th>Şehir</th>
                <th>Sokak</th>
                <th>Sokak Adı</th>
                <th>Bina Numarası</th>
                <th>Ülke Kodu</th>
            </tr>
        </thead>
        @foreach (var item in Model.PagedList)
        {
            <tr>
                <td>
                    <div class="input-group-prepend">
                        <a class="btn btn-outline-secondary btn-sm" title="Detay"
                           href="@Url.Action("Details", "Address", new { id = item.Id })">
                            <i class="fa fa-eye"></i>
                        </a>
                        <button type="button" class="btn btn-outline-secondary dropdown-toggle dropdown-toggle-split btn-sm" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="@Url.Action("Edit", "Address", new { id = item.Id })">Güncelleme</a>
                            <a class="dropdown-item" href="@Url.Action("AddressDelete", "Address", new { id = item.Id })">Sil</a>
                        </div>
                    </div>
                </td>
                <td>@Html.DisplayFor(modelItem => item.Country)</td>
                <td>@Html.DisplayFor(modelItem => item.City)</td>
                <td>@Html.DisplayFor(modelItem => item.Street)</td>
                <td>@Html.DisplayFor(modelItem => item.StreetName)</td>
                <td>@Html.DisplayFor(modelItem => item.BuildingNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.CountyCode)</td>
            </tr>
        }
    </table>
}
else
{
    <div class="card-body">
        @await Html.PartialAsync("ErrorList", "Address Yok!")
    </div>
}