@model NetChallange.Web.Models.CompanyViewModel.CompanyHomeViewModel
@if (Model.PagedList.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th></th>
                <th>Şirket Adı</th>
                <th>E-posta</th>
                <th>Telefon</th>
                <th>Web-Site</th>
            </tr>
        </thead>
        @foreach (var item in Model.PagedList)
        {
            <tr>
                <td>
                    <div class="input-group-prepend">
                        <a class="btn btn-outline-secondary btn-sm" title="Detay"
                           href="@Url.Action("Details", "Company", new { id = item.Id })">
                            <i class="fa fa-eye"></i>
                        </a>
                        <button type="button" class="btn btn-outline-secondary dropdown-toggle dropdown-toggle-split btn-sm" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="@Url.Action("Edit", "Company", new { id = item.Id })">Güncelleme</a>
                            <a class="dropdown-item" href="@Url.Action("CompanyDelete", "Company", new { id = item.Id })">Sil</a>
                        </div>
                    </div>
                </td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                <td>@Html.DisplayFor(modelItem => item.Website)</td>
            </tr>
        }
    </table>
}
else
{
    <div class="card-body">
        @await Html.PartialAsync("ErrorList", "Kayıtlı Şirket Yok!")
    </div>
}